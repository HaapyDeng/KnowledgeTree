<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/ll_0"
        app:layout_heightPercent="12.5%"
        app:layout_widthPercent="100%" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/testbs_icon_advantage03" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/iv_2"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_3"
        android:gravity="center"
        android:text="@string/self_test_guide_test3"
        android:textColor="#FF353535"
        android:textSize="24dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_4"
        app:layout_heightPercent="2%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_5"
        android:layout_marginLeft="81dp"
        android:layout_marginRight="81dp"
        android:gravity="center"
        android:text="@string/self_test_guide_test33"
        android:textColor="#FF000000"
        android:textSize="18dp"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_6"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%" />

</android.support.percent.PercentRelativeLayout>
