<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF00B6BC">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="25.6%"
        app:layout_widthPercent="100%" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_1"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/splash_img_logo_white"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="40%" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/iv_1"
        app:layout_heightPercent="33.4%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_2"
        android:gravity="center"
        android:text="@string/splash_text"
        android:textColor="#FFFFFFFF"
        app:layout_heightPercent="3.1%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/tv_3"
        app:layout_heightPercent="2.5%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_border"
        android:gravity="center"
        android:text="@string/version_number"
        android:textColor="#FFFFFFFF"
        app:layout_heightPercent="3.1%"
        app:layout_widthPercent="36.1%" />
</android.support.percent.PercentRelativeLayout>
