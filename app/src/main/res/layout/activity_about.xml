<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.max_plus.knowledgetree.activity.AboutActivity">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FF37C9CE"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@drawable/common_ic_exit" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16.3dp"
            android:background="#1F000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="@string/about"
            android:textColor="#FFFFFFFF"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/head"
        app:layout_heightPercent="17.5%"
        app:layout_widthPercent="100%" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_ic_about_logo"
        app:layout_heightPercent="15.6%"
        app:layout_widthPercent="27.8%" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/iv_1"
        app:layout_heightPercent="7.5%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/tv_2"
        android:gravity="center"
        android:text="@string/knowledge_tree"
        android:textColor="#FF000000"
        android:textSize="24dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/version_number"
        android:textColor="#FF000000"
        android:textSize="14dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_4"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="100%" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_5"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/company_info"
        android:textColor="#FF000000"
        android:textSize="14dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%" />

</android.support.percent.PercentRelativeLayout>
